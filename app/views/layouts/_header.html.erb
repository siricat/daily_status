<header class="row-fluid page-header">
  <h1 class="span5"><%= link_to "Daily Status", root_path %></h1>
  
  <% if user_signed_in?  %>
    <form class="form-search span4">
      <input class="input-large search-query" type="text">
      <button class="btn" type="submit">Search</button>
    </form>
  <% end %>
  
  <nav class="pull-right span3">
    <ul>
      <% if user_signed_in? %>
        <li><%= link_to "Settings", void_path %></li> 
        <li><%= link_to "Log Out", destroy_user_session_path, :method => :delete %></li>             
   	    <li><%= link_to "Report Daily Status", prototypes_path("status"), :class => "btn btn-primary btn-small" %></li>      
      <% else %>
        <li><%= link_to "Log In", new_user_session_path %></li>
        <li><%= link_to "Register", new_user_registration_path %></li>
     	<% end %>
    </ul>
  </nav>
</header>